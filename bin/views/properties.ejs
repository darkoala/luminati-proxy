<form class=form-horizontal>
  <div class="box-group" id="new_accordion">
    <div class="panel box box-primary">
      <div class="box-header with-border">
        <h4 class="box-title">
          <a data-toggle="collapse" data-parent="#new_accordion" href="#new_general<%= proxy.port %>">
            General
          </a>
        </h4>
      </div>
      <div id="new_general<%= proxy.port %>" class="panel-collapse collapse in">
        <div class="box-body">
          <div class=form-group>
            <label class="col-sm-2 control-label">Port</label>
            <div class=col-sm-10>
              <input type=number class=form-control name=port value="<%= proxy.port %>" placeholder="Leave empty for automatic allocation">
            </div>
          </div>
          <div class=form-group>
	    <label class="col-sm-2 control-label">Proxy</label>
            <div class=col-sm-10>
              <input type=text class=form-control name=proxy value="<%= proxy.proxy %>" placeholder="us, uk or an ip">
            </div><%# XXX lee add proxy_count %> 
	  </div>
	  <div class=form-group>
	    <label class="col-sm-2 control-label">Zone</label>
	    <div class=col-sm-10>
	      <input type=text class=form-control name=zone value="<%= proxy.zone %>">
	    </div>
	  </div>
	  <div class=form-group>
	    <label class="col-sm-2 control-label">Password</label>
	    <div class=col-sm-10>
	      <input type=password class=form-control name=password value="<%= proxy.password %>" placeholder="zone password">
	    </div>
	  </div>
        </div>
      </div>
    </div>
    <div class="panel box">
      <div class="box-header with-border">
        <h4 class="box-title">
          <a data-toggle="collapse" data-parent="#new_accordion" href="#new_filtering<%= proxy.port %>">
            IP Filtering
          </a>
        </h4>
      </div>
      <div id="new_filtering<%= proxy.port %>" class="panel-collapse collapse">
        <div class="box-body">
          <div class=form-group>
            <label class="col-sm-2 control-label">Country</label>
              <div class=col-sm-10>
	      <select class=form-control name=country>
	        <option value="">Any</option>
	        <% countries.forEach(country=>{ %>
	          <option <%= proxy.country==country.code?'selected':'' %> value="<%=country.code%>"><%=country.name%></option>
                <% }) %>
	      </select>
            </div>
          </div>
          <div class=form-group>
	    <label class="col-sm-2 control-label">City</label>
            <div class=col-sm-10>
	      <input type=text class=form-control name=city value="<%= proxy.city %>">
            </div>
          </div>
        </div>
      </div>
    </div>
    <div class="panel box">
      <div class="box-header with-border">
        <h4 class="box-title">
          <a data-toggle="collapse" data-parent="#new_accordion" href="#new_misc<%= proxy.port %>">
            Other
          </a>
        </h4>
      </div>
      <div id="new_misc<%= proxy.port %>" class="panel-collapse collapse">
        <div class="box-body">
          <div class=form-group>
            <label class="col-sm-2 control-label">DNS</label>
            <div class="col-sm-10">
	      <div class=radio>
	        <label>
	          <input type=radio name=dns <%= proxy.dns=='local'?'checked':'' %> value=local>
	          Local
                </label>
	      </div>
	      <div class=radio>
	        <label>
	          <input type=radio name=dns <%= proxy.dns=='remote'?'checked':'' %> value=remote>
                  Remote
	        </label>
              </div>
	    </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</form>
